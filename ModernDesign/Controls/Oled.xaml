<UserControl x:Class="GSApp.Controls.Oled"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GSApp.Controls"
             Width="64" Height="32">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Background="Black" CornerRadius="5">
            <Grid>
                <!-- TextBlock zur Anzeige des Textes -->
                <TextBlock x:Name="DisplayText" 
                           Foreground="White" 
                           FontFamily="Courier New"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,0"/>

                <!-- Image zur Anzeige von Bildern -->
                <Image x:Name="DisplayImage" Stretch="Uniform"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>